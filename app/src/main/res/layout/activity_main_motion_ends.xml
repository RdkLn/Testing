<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/titulo"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_black"
            android:padding="22dp"
            android:text="Titulo de la increible transiciÃ³n"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:fontFamily="@font/roboto"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed rhoncus a risus ut commodo. Suspendisse vehicula odio volutpat sollicitudin malesuada. Quisque eu eros a nisi porttitor tempus ut sed nulla. Nulla nec quam mattis, cursus diam in, elementum purus. In pharetra sem at justo facilisis bibendum et eget dolor. Nam suscipit eleifend massa, vitae posuere urna dapibus eget. Cras at ipsum eu purus aliquet interdum a non urna. Ut consectetur fringilla libero et pretium. Mauris lobortis, enim vel ultrices dictum, lectus mauris vestibulum massa, vitae semper enim libero eu urna. Pellentesque quis mauris ut lectus tincidunt tempus eget viverra purus. Integer velit dui, ultrices et vulputate id, consectetur et quam. Donec laoreet auctor nunc quis congue.  Aliquam egestas efficitur lorem placerat consequat. Maecenas purus urna, pellentesque eget consectetur sed, aliquam ullamcorper est. Cras neque tellus, dictum consectetur mollis ut, vulputate a neque. Suspendisse egestas interdum mauris in rutrum. Proin sed fermentum tortor, a lobortis augue."/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="changeActivity"
                android:text="Seguir Leyendo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="Deprecated" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>